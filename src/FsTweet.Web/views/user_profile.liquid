{% extends "page.liquid" %}

{% block head %}
  <title> {{model.Username}} - FsTweet </title>
{% endblock %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img src="{{model.gravatar_url}}" alt="" class="gravatar" />
      <p class="gravatar_name">@{{model.Username}}</p>
    </div>
    <div class="col-md-8">
      
      {% if model.is_logged_in %}
        <div class="row">
          {% include 'tweet_post.liquid' %}   
        </div>     
      {% endif %} 
               
      <div class="row">
        <ul class="nav nav-tabs nav-justified">
          <li role="presentation" class="active">
            <a href="#tweets" data-toggle="tab">Tweets</a>
          </li>
          <li role="presentation">
            <a href="#following" data-toggle="tab">Following <span class="badge">42</span></a>
          </li>
          <li role="presentation">
            <a href="#followers" data-toggle="tab">Followers <span class="badge">24</span></a>
          </li>
        </ul>
        <div class="tab-content">
          <div id="tweets" class="tab-pane fade in active">
            <div class="tweet_read_view">
              <p>Lorum Ipsum....</p>
            </div>
            <div class="tweet_read_view">
              <p>Lorum Ipsum....</p>
            </div>
            <div class="tweet_read_view">
              <p>Lorum Ipsum....</p>
            </div>
            <div class="tweet_read_view">
              <p>Lorum Ipsum....</p>
            </div>
          </div>
          <div id="following" class="tab-pane fade">
            <h3>Following</h3>
            <p>Todo</p>
          </div>
          <div id="followers" class="tab-pane fade">
            <h3>Followers</h3>
            <p>Todo</p>
          </div>
        </div>
      </div>      
    </div>
  </div>  
</div>
{% endblock %}